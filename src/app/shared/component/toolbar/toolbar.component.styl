@import "../../../../styles.styl"

mat-toolbar
  display flex
  flex-flow row nowrap
  justify-content space-between
  div
    display flex
    justify-content center
    align-items center

mat-toolbar
  background-color $color-200
  div
    cursor pointer

mat-sidenav-container
  height calc(100vh - 64px)
  mat-sidenav
    background $color-50
    width 200px
    display flex
    flex-flow column nowrap
    .sidebar_item, .sidebar_item-disabled
      padding 12px 16px 12px 16px
      display flex
      justify-content space-between
    .sidebar_item-disabled
      background-color $color-gray
    .sidebar_item
      background-color $color-50
      color $color-900
      cursor pointer
      -webkit-transition background ease-in-out 0.25s
      -moz-transition background ease-in-out 0.25s
      -ms-transition background ease-in-out 0.25s
      -o-transition background ease-in-out 0.25s
      transition background ease-in-out 0.25s
      &:hover
        background-color $color-100
      .mat-list-item-content
        display flex
        padding 0
        flex-grow 1
        justify-content space-between !important

mat-sidenav-content
  padding 0 16px 0 16px
  min-height calc(100vh - 64px)
  background-image linear-gradient($color-A900, $color-900)
  display flex
  justify-content center

.toolbar-option, mat-list-item
  cursor pointer
  -webkit-transition background ease-in-out 0.5s
  -moz-transition background ease-in-out 0.5s
  -ms-transition background ease-in-out 0.5s
  -o-transition background ease-in-out 0.5s
  transition background ease-in-out 0.5s
  &:hover
    background-color $color-300

.icon_option
  padding 20px 4px 20px 4px
.span_option
  padding 16px 6px 16px 6px


.user-settings
  width 200px
  z-index 2
  position absolute
  background-color $color-100
  top 64px
  right 0
  .list
    .list_item
      cursor pointer
      padding 8px
      display flex
      flex-flow row nowrap
      justify-content space-between
