@import "../../../styles.styl"

.content
  display flex
  flex-flow column nowrap
  padding 16px
  background-color $color-light-gray

.large_content
  width 80%
  -webkit-box-shadow: 0 0 10px 0 rgba(125, 125, 125, 0.75);
  -moz-box-shadow: 0 0 10px 0 rgba(125, 125, 125, 0.75);
  box-shadow: 0 0 10px 0 rgba(125, 125, 125, 0.75);

.small_content
  .title
    display flex
    flex-flow column nowrap
    justify-content center
  .status
    display flex
    flex-flow row nowrap
    justify-content center
  width 100%

.title
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items center

.status
  display flex
  justify-content left
  align-items center

.green
  color green

.red
  color red

.chart
  display flex
  justify-content center
  align-items center

img
  margin 4px
  cursor pointer
  max-width 100%

.camera-info
  .left, .right
    min-width 50%
  .right
    align-items center

.not-found
  min-height 80vh
  display flex
  justify-content center
  align-items center

.space-between
  justify-content space-between
  align-items center

.space-around
  display flex
  flex-flow column nowrap
  flow-grow 1
  justify-content space-around
  align-items center

.metadata
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items center
  padding-bottom 32px
