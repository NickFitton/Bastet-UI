@import "../../../styles.styl"

.page_content
  .title
    align-items center
    justify-content space-between
  section
    margin-bottom 16px
.collection
  justify-content flex-start
  align-items flex-start

.graphs
  margin 8px

.orange
  background orange
.green
  background lawngreen
.blue
  background dodgerblue

app-box
  justify-content center
  align-items center
  margin 8px
  span
    text-align center

mat-card
  margin 8px
mat-card-actions
  justify-content flex-end
mat-card-subtitle
  margin-bottom 0

.align_center
  align-items center
  margin-bottom 16px

.tab_format
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center

.large-icon
  font-size 128px
  color #D55F5F
  width 128px
  height 128px

.fill_size
  height calc(100vh - 65px)
  justify-content center
