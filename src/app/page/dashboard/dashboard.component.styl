@import "../../../styles.styl"
@import "../../shared/theme/button.styl"

.content
  display flex
  flex-flow column nowrap
  min-height "calc(100vh - %s)" % $toolbar-height
  section
    padding 16px
    background-color $color-light-gray
    app-box
      span
        text-align center
  .title
    display flex
    flex-flow column nowrap
    justify-content center
  .status
    display flex
    flex-flow row nowrap
    justify-content center
  width 100%

.row, .camera-title
  display flex
  flex-direction row

.camera-title
  justify-content left
  align-items center

.column
  display flex
  flex-flow column wrap

.orange
  background orange

.green
  background lawngreen

.blue
  background dodgerblue

table
  text-align right

.camera-setup
  cursor pointer
