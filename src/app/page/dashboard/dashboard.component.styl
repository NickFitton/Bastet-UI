.content
  padding 16px

.row
  display flex
  flex-direction row

.column
  display flex
  flex-flow column wrap

.orange
  background orange

.green
  background lawngreen

.blue
  background dodgerblue

table
  text-align right

.box
  display flex
  justify-content center
  align-items center
  background #eee
  width 192px
  height 128px
  cursor pointer
  &:hover
    -webkit-transition background ease-in-out 0.25s
    -moz-transition background ease-in-out 0.25s
    -ms-transition background ease-in-out 0.25s
    -o-transition background ease-in-out 0.25s
    transition background ease-in-out 0.25s
    background #ddd
